# Makefile for building applications.

# Edit this file to compile extra C files into their own programs.

TARGETS = problema_examen

CROSS_TOOL =
CC_CPP = $(CROSS_TOOL)g++
CC_C = $(CROSS_TOOK)gcc

CFLAGS = -Wall -g -std=c++11 -Werror 

all: clean $(TARGETS)

$(TARGETS):
	$(CC_CPP) $(CFLAGS) $@.c -o $@

clean:
	rm -f $(TARGETS)
